<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
    </style>


    <!-- Shareable image style -->
    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="img_dark">
        <item name="android:src">@drawable/ic_dark_mode</item>
    </style>


    <style name="fragment_container" >
        <item name="background">@color/dark_color</item>
        <item name="android:textColor">@color/white</item>
    </style>


     <style name="SearchViewStyle" parent="Theme.Movies">
         <item name="android:editTextColor">@android:color/white</item>
         <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_icon_color">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="bottom_navigation_bar_color">
        <item name="android:itemBackground">@color/white</item>
        <item name="background">@color/white</item>
    </style>


</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Text color -->
        <item name="android:editTextColor">@color/white</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/white</item>
    </style>


    <!-- Shareable image style -->
    <style name="ShapeAppearanceOverlay.App.CornerSize15Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8%</item>
    </style>

    <style name="img_dark">
        <item name="android:src">@drawable/ic_dark_mode</item>
    </style>


    <style name="fragment_container" >
        <item name="android:background">@color/light_white</item>
        <item name="android:textColor">@color/black</item>
    </style>


     <style name="SearchViewStyle" parent="Theme.Movies">
         <item name="android:editTextColor">@android:color/white</item>
         <item name="android:textColorHint">@android:color/white</item>
    </style>

    <!--Text color -->
    <style name="text_color">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Search icon color -->
    <style name="search_icon_color">
        <item name="android:tint">@color/black</item>
    </style>

    <!-- Navigation bar color -->
    <style name="bottom_navigation_bar_color">
        <item name="android:itemBackground">@color/white</item>
        <item name="background">@color/white</item>
    </style>

    <style name="search_edit_text_color">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableEnd">@drawable/ic_close_dark</item>
        <item name="android:drawableStart">@drawable/ic_search_dark</item>
        <item name="android:background">@drawable/rounded_corner_view_light</item>
    </style>

    <!--Recycler view item -->
    <style name="recycler_view_item">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Image color -->
    <style name="image_color">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="shadow_style">
        <item name="srcCompat">@drawable/shadow_details_light</item>
    </style>
</resources>
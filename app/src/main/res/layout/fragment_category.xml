<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mango.movies.ui.categoris.CategoryViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color"
        tools:context=".ui.categoris.CategoryFragment">



        <ImageView
            android:id="@+id/image_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back"/>
        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/dark_color"
            android:id="@+id/text_series"
            android:onClick="@{() -> viewModel.changeMovieOrSeries()}"
            android:layout_marginRight="128dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/chip_width"
            android:layout_height="@dimen/chip_height"
            android:textAlignment="center"
            android:fontFamily="@font/mplusrounded1c_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/txt5"
            android:layout_marginTop="48dp"
            android:text="@string/series"
            app:layout_constraintStart_toStartOf="parent" />
        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="@color/dark_color"
            android:id="@+id/text_movies"
            android:layout_width="@dimen/chip_width"
            android:layout_height="@dimen/chip_height"
            android:layout_marginLeft="32dp"
            android:textAlignment="center"
            android:fontFamily="@font/mplusrounded1c_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/txt5"
            android:text="@string/movies"
            android:onClick="@{() -> viewModel.changeMovieOrSeries()}"
            app:layout_constraintBottom_toBottomOf="@+id/text_series"
            app:layout_constraintStart_toEndOf="@+id/text_series"
            app:layout_constraintTop_toTopOf="@+id/text_series" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_movies"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:showOnSuccess="@{viewModel.genreMovieList}"
            app:items="@{viewModel.genreMovieList.toData().results}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_series"
            tools:listitem="@layout/item_category" />

        <ImageView
            android:id="@+id/image_error"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_error"
            app:showOnError="@{viewModel.genreMovieList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ProgressBar
            android:id="@+id/progressBar_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:showOnLoading="@{viewModel.genreMovieList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.616" />










    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.mango.movies.ui.categoris.ResultViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color"
        tools:context=".ui.categoris.CategoryFragment">



        <ImageView
            android:id="@+id/image_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/medium_margin"
            android:layout_marginStart="@dimen/medium_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_movie_tv"
            app:singleSelection="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/card_series"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp"
                app:contentPaddingTop="8dp"
                app:contentPaddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:checkable="true"
                android:text="@string/series"
                android:textColor="@color/white"
                android:onCheckedChanged="@{() -> viewModel.changeMovieOrSeries(false)}"
                app:chipBackgroundColor="@color/dark_color"
                app:cardCornerRadius="32dp"/>



            <com.google.android.material.chip.Chip
                android:id="@+id/card_movie"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/card_series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp"
                app:contentPaddingTop="8dp"
                android:checkable="true"
                android:onCheckedChanged="@{() -> viewModel.changeMovieOrSeries(true)}"
                android:textSize="@dimen/txt3"
                android:fontFamily="@font/mplusrounded1c_bold"
                app:contentPaddingBottom="8dp"
                android:textColor="@color/white"
                android:text="@string/movies"
                app:chipBackgroundColor="@color/dark_color"/>
        </com.google.android.material.chip.ChipGroup>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            app:showOnSuccess="@{viewModel.genres}"
            app:items="@{viewModel.genres.toData().genres}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chip_group_movie_tv"
            tools:listitem="@layout/item_genre"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_movies"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/small_margin"
            app:showOnSuccess="@{viewModel.genreMovieList}"
            app:items="@{viewModel.genreMovieList.toData().results}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycler_genre"
            tools:listitem="@layout/item_category" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_error"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/error_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:showOnError="@{viewModel.genreMovieList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_loading"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/loading_animation"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:showOnLoading="@{viewModel.genreMovieList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>










    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
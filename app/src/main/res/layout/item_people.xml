<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="item"
            type="com.mango.movies.model.domain.person.popular.PersonPopularResult" />
        <variable
            name="listener"
            type="com.mango.movies.ui.person.PersonInteractionListener" />

    </data>

        <androidx.cardview.widget.CardView
            android:onClick="@{()-> listener.onClickPerson(item)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/dark_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="@dimen/cardview_default_elevation"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            app:cardCornerRadius="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp">
                <com.google.android.material.imageview.ShapeableImageView
                    android:onClick="@{()-> listener.onClickPerson(item)}"
                    android:id="@+id/actorImg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/small_margin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/actor"
                    personImageUrl="@{item.profilePath}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,77:84"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.22"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize15Percent" />

                <TextView
                    android:id="@+id/actorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:text="@{item.name}"
                    android:fontFamily="@font/mplusrounded1c_bold"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/actorImg"
                    app:layout_constraintTop_toTopOf="@+id/actorImg"
                    tools:text="Tom Hardy" />

                <TextView
                    android:id="@+id/seriesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inika_regular"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.65"
                    app:layout_constraintStart_toEndOf="@+id/actorImg"
                    app:layout_constraintTop_toTopOf="@+id/moviesNo"
                    tools:text="Series:24" />

                <TextView
                    android:id="@+id/moviesNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:fontFamily="@font/inika_regular"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/txt3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.35"
                    app:layout_constraintStart_toEndOf="@+id/actorImg"
                    app:layout_constraintTop_toBottomOf="@+id/actorName"
                    tools:text="Movies:24" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
</layout>
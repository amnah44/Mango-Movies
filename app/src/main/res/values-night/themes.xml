<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryVariant">@color/dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="img_dark">
        <item name="android:src">@drawable/ic_light_mode</item>
    </style>

    <!-- Text style of textView -->
    <style name="style_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/txt3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_constraint_layout">
        <item name="android:elevation">@dimen/small_padding</item>
    </style>

    <style name="fragment_container" >
        <item name="android:background">@color/app_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Text color -->
    <style name="text_color">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Search icon color -->
    <style name="search_icon_color">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Navigation bar color -->
    <style name="bottom_navigation_bar_color">
        <item name="android:itemBackground">@color/app_color</item>
        <item name="background">@color/app_color</item>
    </style>

    <style name="search_edit_text_color">
        <item name="android:textColor">@color/white</item>
        <item name="android:drawableEnd">@drawable/ic_close_light</item>
        <item name="android:drawableStart">@drawable/ic_search_light</item>
        <item name="android:background">@drawable/rounded_corner_view_dark</item>
    </style>

    <style name="recycler_view_item">
        <item name="cardBackgroundColor">@color/dark_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Image color -->
    <style name="image_color">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="shadow_style">
        <item name="srcCompat">@drawable/shadow_details_dark</item>
    </style>
</resources>
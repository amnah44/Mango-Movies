<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mango.movies.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_categoryFragment4"
            app:destination="@id/categoryFragment" />
    </fragment>

    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.mango.movies.ui.favorite.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/fragment_favorites"/>

    <fragment
        android:id="@+id/personFragment"
        android:name="com.mango.movies.ui.person.PersonFragment"
        android:label="PeopleFragment"
        tools:layout="@layout/fragment_people"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mango.movies.ui.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.mango.movies.ui.search.SearchFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.mango.movies.ui.categoris.CategoryFragment"
        android:label="CategoryFragment"
        tools:layout="@layout/fragment_category">
        <argument
            android:name="genreId"
            app:argType="integer" />
    </fragment>

</navigation>